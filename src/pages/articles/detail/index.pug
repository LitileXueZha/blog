extends src/layout.pug
include src/components/icon_svg.pug

block title
  title 文章详情_滔's 博客

block content
  main.tc-container
    article.container-article.skeleton
      //- 骨架屏：文章
      .skeleton-article
        <!-- %ssr_inject% -->
        .title
        .info-label
        .info-label
        .body
          .summary
            .p
            .p
          each tmp in Array(3)
            .section
              .section-title
              .p
              .p
              .p
      //- ====================================
      .markdowned
        h1.title
        p.info
          +icon('time', 14)
          time.time(title="发布时间") 刚刚
          br
          +icon('tag', 14)
          span.tag JavaScript
          i.tc-divider
          a#fullscreen(href="javascript:;", role="button") 全屏阅读
        .body
        button#exit-fullscreen(title="退出全屏")
          +icon('close', 14)
      //- 骨架屏：目录
      .skeleton-catalog
        .title
        each tmp in Array(5)
          .p
      //- ====================================
      .tc-affix(data-top=10)
        aside.catalog
          //- img.cover(src= require("../src/assets/life.jpg"), alt="封面", height=200)
          .content 无目录
          .backtop
            a(role="button", onclick="javascript:window.scrollTo(0,0);") 回到顶部
    .container-more
      .actions
        button.tc-ripple(title="喜欢")
          +icon('heart', 20)
        button.tc-ripple(title="踩一下")
          +icon('foot', 20)
      p.next 下一篇：
        a(href="#") 打酱油
      p.previous 上一篇：
        a(href="#") 钢铁是怎样炼成的
      .comments
        form#form-comment
          textarea.input-comment(name="content", cols="30", rows="10", maxlength=200, placeholder="说说你的看法~")
          .tip
            button.tc-ripple 评论
            |  Ctrl + Enter
        ul.list-comment.skeleton-comment
          //- 骨架屏
          li.comment
            .comment-at
            .comment-content
              .p
              .p
