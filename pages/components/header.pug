include icon_svg.pug

header
  nav.tc-container.nav-header
    form#search(action="/search.html")
      input(type="text", placeholder="搜点什么呢", name="s", autocomplete="off")
      +icon('search', 20, '#fff')
    ul
      -
        const links = {
          index: {
            path: '/',
            text: '首页',
            className: '',
          },
          note: {
            path: '/note.html',
            text: '笔记',
            className: '',
          },
          life: {
            path: '/life.html',
            text: '生活',
            className: '',
          },
          about: {
            path: '/about.html',
            text: '关于这个',
            className: '',
          },
        };
        if (links[pathname]) links[pathname].className = 'active';
      each link in links
        li
          a(class= link.className, href= link.path)= link.text
    - const msgClass = `msg ${pathname === 'msg' ? 'active' : ''} `
    a(class= msgClass href="/msg.html", title="留言板")
      +icon('msg', 40)
